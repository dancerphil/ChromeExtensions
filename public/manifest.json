{
	"manifest_version": 3,
	"name": "张振衣的浏览器插件",
	"version": "1.0.1",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"tabs",
		"tabGroups",
		"commands",
		"scripting",
		"activeTab",
		"storage"
	],
	"options_page": "index.html",
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"commands": {
		"1_ungroup": {
			"description": "取消分组"
		},
		"2_group": {
			"suggested_key": {
				"default": "Ctrl+E",
				"mac": "Command+E"
			},
			"description": "分组"
		},
		"3_toggleEditableMode": {
			"suggested_key": {
				"default": "Ctrl+U",
				"mac": "Command+U"
			},
			"description": "切换可编辑模式"
		}
	}
}
