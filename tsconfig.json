{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es2018",
        "noEmit": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
        ],
        "sourceMap": true,
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite/client", "chrome"],
        "allowJs": false,
        "strict": true,
        "declaration": true,
        "jsx": "preserve",
        "strictNullChecks": false,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*/"
    ]
}
