{
	"manifest_version": 2,
	"name": "ZhihuBlocker",
	"description": "屏蔽黑名单用户发布的内容。源码：https://github.com/dancerphil/ZhihuBlocker",
	"permissions": ["http://*.zhihu.com/", "https://*.zhihu.com/", "http://www.bilibili.com/", "http://scp-wiki-cn.wikidot.com/"],
	"content_scripts": [{
		"matches": ["http://www.zhihu.com/*", "https://www.zhihu.com/*", "http://www.bilibili.com/*", "http://scp-wiki-cn.wikidot.com/*"],
		"js": [
			"jquery-1.8.2.min.js",
			"ZhihuBlocker.js",
			"FollowerBlocker.js",
			"Bilibili.js",
			"scp.js"]
	}],
	"version": "1.0.5.3"
}
